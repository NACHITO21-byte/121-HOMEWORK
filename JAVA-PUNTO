package com.mycompany.mavenproject1;

/**
 *
 * @author NACHO
 */
public class Punto {
    public float largo;
    public float ancho;

    public Punto(int largo, int ancho) {
        this.largo = largo;
        this.ancho = ancho;
    }
    public float perimetro(){
        float x=2*(largo+ancho);
        return x;
    
    }
    public float area(){
        float y=largo *ancho;
        return y;
    }
    
    public static void main(String[] args) {
        Punto a=new Punto(2,3);
        System.out.println(a.area());
        System.out.println(a.perimetro());
        
    }
}
